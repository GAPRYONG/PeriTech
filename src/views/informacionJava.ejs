    transform: scale(1.5);
    accent-color: #ff6b6b; /* Cambia el color del checkbox */
}

        tr:nth-child(even) td {
            background-color: #e9e9e9;
        }
        tr:hover {
            background-color: #f0f0f0;
        }
        .table-header {
            font-size: 20px;
            font-weight: bold;
            color: white;
        }
        .cta-button {
            display: inline-block;
            margin-top: 25px;
            padding: 12px 25px;
            background-color: #ff6b6b;
            color: black;
            text-decoration: none;
            border-radius: 8px;
            transition: background-color 0.3s ease;
            font-weight: 600;
        }
        .cta-button:hover {
            background-color: #e05757;
        }
        

        @media (max-width: 800px) {
            .contenido {
                flex-direction: column;
                align-items: center;
                padding: 10px;
            }

            .contenido-text {
                margin-right: 0;
                text-align: center;
                padding: 0 15px; /* Añadido padding para mejorar el espaciado en móviles */
            }

            .video-container {
                margin-top: 20px;
                margin-left: 0;
            }

            /* Cambiar el orden de los elementos en pantallas pequeñas */
            .main-content {
                flex-direction: column;
                padding: 0 15px; /* Reducir el padding en pantallas pequeñas */
            }

            /* Aseguramos que el contenedor del curso ocupe todo el ancho disponible */
            .course-info {
                margin-left: 0;
                margin-right: 0;
                max-width: 100%;
                margin-top: 20px;
            }

            /* Hacer que la sección de contenido del curso ocupe más espacio */
            .course-container {
                max-width: 100%;
                padding: 15px;
            }

            .cta-button {
                padding: 12px 30px;
                font-size: 16px; /* Aseguramos que los botones sean más grandes en móviles */
            }
            
        }

        /* Ajustes adicionales para imágenes en dispositivos móviles */
        @media (max-width: 600px) {
            .course-info img {
                margin-left: 15px;
                margin-right: 15px;
            }
        }
    </style>
</head>

