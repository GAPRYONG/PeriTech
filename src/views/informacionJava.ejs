        th, td {
            padding: 12px 20px;
            text-align: center;
            font-size: 20px;
            color: black;
        }
        th {
            background-color: #28293d;
            color: black;
            font-weight: bold;
        }
        td {
            background-color: #f1f1f1;
        }
