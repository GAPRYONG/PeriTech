        .course-container {
            border-radius: 10px;
            padding: 25px;
            flex: 2;
            display: flex;
            flex-direction: column;
            color: #f1f1f1;
            width: 100%;
            max-width: 900px; /* Limitar el ancho máximo del contenido principal */
