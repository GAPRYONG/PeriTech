            font-family: 'Montserrat', sans-serif;
            font-size: 26px;
            margin-bottom: 25px;
            color: black; /* Cambiar el título a negro */
        }

        .section {
            margin-bottom: 15px;
            border: 1px solid #5a5a77;
            border-radius: 8px;
            overflow: hidden;
        }

        .section-title {
            color: black;
            padding: 12px;
            cursor: pointer;
            position: relative;
            transition: background-color 0.3s;
            font-weight: 600;
        }

        .section-content {
            display: none;
            padding: 12px;
            color: black;
        }

        .show {
            display: block;
        }

        .expand-icon {
            position: absolute;
            right: 10px;
            top: 12px;
            transition: transform 0.3s ease;
        }

        .expand-icon.rotate {
            transform: rotate(90deg);
        }

        .info {
            margin-top: 25px;
            text-align: center;
        }

        .info p {
            margin: 5px 0;
        }

        .cta-button {
            display: inline-block;
            margin-top: 25px;
            padding: 12px 25px;
            background-color: #ff6b6b;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            transition: background-color 0.3s ease;
            font-weight: 600;
        }

        .cta-button:hover {
            background-color: #e05757;
        }

        footer {
            background-color: #2c3e50;
            color: white;
            text-align: center;
            padding: 10px;
            margin-top: auto;
            width: 100%;
            color: white !important;
